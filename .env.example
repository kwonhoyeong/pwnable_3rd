# Service Configuration
NT_APP_NAME=npm-threat-evaluator
NT_ENVIRONMENT=development
NT_LOG_LEVEL=INFO

# Database Configuration
NT_POSTGRES_DSN=postgresql+asyncpg://user:password@localhost:5432/threatdb
NT_ENABLE_DATABASE=false

# Redis Configuration
NT_REDIS_URL=redis://localhost:6379/0
NT_ENABLE_CACHE=false
NT_CACHE_TTL_SECONDS=3600

# Kafka Configuration
NT_KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# AI API Keys
# These should be obtained from respective services
NT_PERPLEXITY_API_KEY=your-perplexity-api-key
NT_CLAUDE_API_KEY=your-claude-api-key
NT_GPT5_API_KEY=your-gpt5-api-key

# External Data Source API Keys
# NVD API Key: https://nvd.nist.gov/developers/request-an-api-key
NVD_API_KEY=your-nvd-api-key-here

# QueryAPI Authentication (IMPORTANT: Change these for production)
# Comma-separated list of valid API keys for protecting QueryAPI endpoints
# Generate secure API keys: python -c "import uuid; print(str(uuid.uuid4()))"
# Example: NT_QUERY_API_KEYS=key1-uuid-here,key2-uuid-here
NT_QUERY_API_KEYS=dev-api-key-123,dev-api-key-456

# Feature toggles (set to true to enable)
NT_ALLOW_EXTERNAL_CALLS=false
